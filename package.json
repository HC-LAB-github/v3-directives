{
  "name": "@ileostar/v3-directives",
  "type": "module",
  "version": "0.0.5",
  "packageManager": "pnpm@8.15.3",
  "description": "Custom Vue3 directives",
  "author": "ileostar <hi@leostar.top> (https://github.com/ileostar)",
  "license": "MIT",
  "homepage": "https://github.com/antfu/eslint-config",
  "bugs": {
    "url": "https://github.com/ileostar/v3-directives/issues"
  },
  "keywords": [
    "v3",
    "directives",
    "vue3"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/v3-directives.esm.js",
      "require": "./dist/v3-directives.cjs"
    }
  },
  "main": "dist/v3-directives.cjs",
  "module": "dist/v3-directives.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "*.cjs",
    "*.d.ts",
    "dist"
  ],
  "scripts": {
    "build": "vite build",
    "dev": "rollup -cw && eslint-flat-config-viewer",
    "start": "esno src/index.ts",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "lint": "eslint src/directive/**/*.ts",
    "fix": "eslint src/**/*.*  --fix",
    "typecheck": "tsc --noEmit",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "release": "bumpp --commit --push --tag && npm publish"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {
    "@floating-ui/dom": "^1.6.3",
    "vue": "^3.4.19",
    "vue-resize": "^1.0.1",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.6.4",
    "@babel/core": "^7.23.9",
    "@rollup/plugin-alias": "^5.1.0",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@types/node": "^20.11.19",
    "@vitest/ui": "^1.3.1",
    "bumpp": "^9.3.0",
    "esbuild": "^0.20.1",
    "eslint": "npm:eslint-ts-patch@8.56.0-0",
    "eslint-plugin-format": "^0.1.0",
    "eslint-ts-patch": "8.56.0-0",
    "esno": "^4.0.0",
    "lint-staged": "^15.2.2",
    "rollup": "^4.12.0",
    "rollup-plugin-dts": "^6.1.0",
    "rollup-plugin-esbuild": "^6.1.1",
    "rollup-plugin-typescript2": "^0.36.0",
    "rollup-plugin-vue": "^6.0.0",
    "simple-git-hooks": "^2.9.0",
    "tsup": "^8.0.2",
    "typescript": "^5.3.3",
    "vite": "^4.3.9",
    "vite-plugin-dts": "^3.7.3",
    "vitepress": "1.0.0-rc.41",
    "vitest": "^1.3.1",
    "vue-tsc": "^1.6.5"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
